{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GenericAgentExchange",
    "type": "object",
    "properties": {
        "exchange_id": {
            "type": "string"
        },
        "from_agent": {
            "type": "string"
        },
        "to_agent": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "payload": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "conversation_update",
                        "knowledge_share",
                        "alert",
                        "feedback"
                    ]
                },
                "content": {
                    "type": "string"
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "confidence": {
                            "type": "number"
                        },
                        "context": {
                            "type": "string"
                        },
                        "tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "meta": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "required": [
        "from_agent",
        "to_agent",
        "type",
        "payload"
    ]
}